<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Free HTML5 Website Template by FreeHTML5.co" />
    <meta name="keywords" content="free website templates, free html5, free template, free bootstrap, free website template, html5, css3, mobile first, responsive" />
    <meta name="author" content="FreeHTML5.co" />

    <!-- Facebook and Twitter integration -->
    <meta property="og:title" content="" />
    <meta property="og:image" content="" />
    <meta property="og:url" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:description" content="" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:image" content="" />
    <meta name="twitter:url" content="" />
    <meta name="twitter:card" content="" />

    <link rel="icon" type="image/png" href="~/Content/images/Home/favicon.png" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Themify Icons-->
    <link rel="stylesheet" href="../../Content/css/themify-icons.css">

    @Styles.Render("~/Content/css")

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="../../Content/css/magnific-popup.css">

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="../../Content/css/bootstrap-datepicker.min.css">

    <!-- Owl Carousel  -->
    <link rel="stylesheet" href="../../Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../../Content/css/owl.theme.default.min.css">

    @Styles.Render("~/Content/css/mine")

    <!-- Modernizr JS -->
    <script src="../../Scripts/js/modernizr-2.6.2.min.js"></script>

</head>
<body>

    <div class="gtco-loader"></div>

    <div id="page">


        <!-- <div class="page-inner"> -->
        <nav class="gtco-nav" role="navigation">
            <div class="gtco-container">

                <div class="row">
                    <div class="col-sm-4 col-xs-12">
                        <div id="gtco-logo"><a href="/Home/Index">Upper <span style="color:#09C6AB">Egypt</span></a></div>
                    </div>
                    <div class="col-xs-8 text-right menu-1">
                        <ul>
                            <li><a href="/Home/Index">Home</a></li>
                            <li class="has-dropdown">
                                <a href="#">Destination</a>
                                <ul class="dropdown">
                                    <li>
                                        @Html.ActionLink("Luxor", "Index", "Places", new { location = MVC_Teeba_Project.Models.Location.Luxor },null)
                                    </li>
                                    <li>
                                        @Html.ActionLink("Aswan", "Index", "Places", new { location = MVC_Teeba_Project.Models.Location.Aswan } , null)
                                    </li>
                                </ul>
                            </li>
                            <li>
                                @Html.ActionLink("Tours" , "Index" , "Tours")
                            </li>
                            <li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "Logoff" , style = "display:inline-block"}))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a href="javascript:document.getElementById('Logoff').submit()">Logout</a>
                                    }
                                }
                                else
                                {
                                    @Html.ActionLink("Login", "Login", "Account")
                                }
                            </li>
                            <li>
                                @if(User.IsInRole("Admin"))
                                {
                                    @Html.ActionLink("Admin Tours","AdminIndex","Tours")                               
                                }
                            </li>
                            <li>
                                @if(User.IsInRole("Admin"))
                                {
                                    @Html.ActionLink("Admin Places","AdminIndex","Places")
                                }
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>

        <header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(../../Content/images/Home/@ViewBag.HeaderImage)">
            <div class="overlay"></div>
            <div class="gtco-container">
                <div class="row">

                    @RenderSection("HeaderContent", required: false)

                </div>
            </div>
        </header>

        @RenderBody()

        <!-- --------------------------Start Subscribe Section------------------------- -->

        <div id="gtco-subscribe">
            <div class="gtco-container">
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                        <h2>Subscribe</h2>
                        <p>Be the first to know about the new templates.</p>
                    </div>
                </div>
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2">
                        <form class="form-inline">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="email" class="sr-only">Email</label>
                                    <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <button type="submit" class="btn btn-default btn-block">Subscribe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- --------------------------End Subscribe Section------------------------- -->
        <!-- --------------------------Start Footer Section------------------------- -->

        <footer id="gtco-footer" role="contentinfo">
            <div class="gtco-container">
                <div class="row row-p	b-md">

                    <div class="col-md-4">
                        <div class="gtco-widget">
                            <h3>About Us</h3>
                            <p>
                                We created this site in order to spread tourism in Upper Egypt as it was before, also so that people know about Luxor and Aswan, the beauty of these two countries and the magic in them.
                            </p>
                        </div>
                    </div>

                    <div class="col-md-2 col-md-push-1">
                        <div class="gtco-widget">
                            <h3>Destination</h3>
                            <ul class="gtco-footer-links">
                                <li><a href="/Luxor/Index">Luxor</a></li>
                                <li><a href="/Aswan/Inedx">Asswan</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-2 col-md-push-1">
                        <div class="gtco-widget">
                            <h3>Hotels</h3>
                            <ul class="gtco-footer-links">
                                <li><a href="#">winter Palace</a></li>
                                <li><a href="#">steigenberger</a></li>
                                <li><a href="#">jolie ville</a></li>
                                <li><a href="#">Mövenpick Aswan</a></li>
                                <li><a href="#">Sofitel Legend Hotel</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-md-push-1">
                        <div class="gtco-widget">
                            <h3>Get In Touch</h3>
                            <ul class="gtco-quick-contact">
                                <li><a href="#"><i class="icon-phone"></i> +20 10 67 45 23 63</a></li>
                                <li><a href="#"><i class="icon-mail2"></i> ziad5827@gmail.com</a></li>
                                <li><a href="#"><i class="icon-chat"></i> Live Chat</a></li>
                            </ul>
                        </div>
                    </div>

                </div>

                <div class="row copyright">
                    <div class="col-md-12">
                        <p class="pull-left">
                            <small class="block">&copy; @DateTime.Now.Year . All Rights Reserved.</small>
                            <small class="block">Designed by </small><a href="#" target="_blank">ZiadAhmed</a>
                        </p>
                        <p class="pull-right">
                            <ul class="gtco-social-icons pull-right">
                                <li><a href="https://twitter.com/ziad76892"><i class="icon-twitter"></i></a></li>
                                <li><a href="https://www.facebook.com/profile.php?id=100006028657997"><i class="icon-facebook"></i></a></li>
                                <li><a href="https://www.linkedin.com/in/ziad-ahmed-447753182/"><i class="icon-linkedin"></i></a></li>
                            </ul>
                        </p>
                    </div>
                </div>

            </div>
        </footer>

        <!-- --------------------------End Footer Section------------------------- -->

    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="../../Scripts/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="../../Scripts/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="../../Scripts/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="../../Scripts/js/jquery.waypoints.min.js"></script>
    <!-- Carousel -->
    <script src="../../Scripts/js/owl.carousel.min.js"></script>
    <!-- countTo -->
    <script src="../../Scripts/js/jquery.countTo.js"></script>

    <!-- Stellar Parallax -->
    <script src="../../Scripts/js/jquery.stellar.min.js"></script>

    <!-- Magnific Popup -->
    <script src="../../Scripts/js/jquery.magnific-popup.min.js"></script>
    <script src="../../Scripts/js/magnific-popup-options.js"></script>

    <!-- Datepicker -->
    <script src="../../Scripts/js/bootstrap-datepicker.min.js"></script>


    <!-- Main -->
    <script src="../../Scripts/js/main.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>

